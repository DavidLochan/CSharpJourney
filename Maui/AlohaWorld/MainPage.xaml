<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AlohaWorld.MainPage">

    <VerticalStackLayout
        Spacing="20"
        Padding="30"
        VerticalOptions="Center">

        <Label
            x:Name="MessageLabel"
            Text="Hello, World!"
            FontSize="32"
            HorizontalOptions="Center" />

        <Button
            Text="Click me"
            Clicked="OnButtonClicked" />

    </VerticalStackLayout>
</ContentPage>