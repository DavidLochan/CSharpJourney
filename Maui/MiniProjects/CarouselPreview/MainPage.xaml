<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarouselPreview.MainPage"
             Title="Phones">

   <Grid RowDefinitions="*,Auto">

   <CarouselView
    Grid.Row="0"
           x:Name="PhonesCarousel"
        ItemsSource="{Binding Products}"
        Margin="20"  
        IndicatorView="PhonesIndicator">         

        <CarouselView.ItemsLayout>
            <LinearItemsLayout
                Orientation="Horizontal"
                ItemSpacing="40" />
        </CarouselView.ItemsLayout>

        <CarouselView.ItemTemplate>
            <DataTemplate>
                <Border
        Stroke="Gray"
        StrokeThickness="1"
        Padding="16"
        Margin="20"
        WidthRequest="420"
         HorizontalOptions="Center"
        BackgroundColor="#1E1E1E">

         <Border.StrokeShape>
            <RoundRectangle CornerRadius="24"/>
        </Border.StrokeShape>

                <VerticalStackLayout Spacing="15">

                    <Image
                        Source="{Binding Image}"
                        HeightRequest="200"
                        WidthRequest="200"
                        Aspect="AspectFit"
                        HorizontalOptions="Center"  >

                        <Image.Clip>
                          <EllipseGeometry
                           Center="100,100"
                           RadiusX="100"
                           RadiusY="100" />
                            </Image.Clip>
                        </Image>

                    <Label
                        Text="{Binding Title}"
                        FontSize="22"
                        FontAttributes="Bold"
                        HorizontalOptions="Center" />

                    <Label
                        Text="{Binding Description}"
                        FontSize="14"
                        TextColor="Gray"
                        HorizontalTextAlignment="Center" />

                </VerticalStackLayout>
                   </Border>
            </DataTemplate>
        </CarouselView.ItemTemplate>

    </CarouselView>

            <ContentView HeightRequest="40">
                <BoxView BackgroundColor="Red" HeightRequest="60" />
    <IndicatorView
        Grid.Row="1"
    x:Name="PhonesIndicator"
    IndicatorColor="#666666"
    SelectedIndicatorColor="#03DAC6"
    IndicatorSize="18"
    HorizontalOptions="Center"
     Margin="0,10"/>
</ContentView>

      </Grid>

</ContentPage>
