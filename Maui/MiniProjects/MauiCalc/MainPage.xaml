<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCalc.MainPage">

    <Grid
        RowDefinitions="*,*,*,*,*"
        ColumnDefinitions="*,*,*,*"
        RowSpacing="2"
        ColumnSpacing="2">

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Text="0"
            FontSize="48"
            HorizontalTextAlignment="End"
            VerticalTextAlignment="Center"
            Padding="20"
            x:Name="LCD" />

        <Button Grid.Row="1" Grid.Column="0" Text="7" FontSize="28" Clicked="OnNumberClicked" />
        <Button Grid.Row="1" Grid.Column="1" Text="8" FontSize="28" Clicked="OnNumberClicked"/>
        <Button Grid.Row="1" Grid.Column="2" Text="9" FontSize="28" Clicked="OnNumberClicked" />
        <Button Grid.Row="1" Grid.Column="3" Text="+" FontSize="28" Clicked="OnOperationClicked" />

        <Button Grid.Row="2" Grid.Column="0" Text="4" FontSize="28" Clicked="OnNumberClicked"/>
        <Button Grid.Row="2" Grid.Column="1" Text="5" FontSize="28" Clicked="OnNumberClicked" />
        <Button Grid.Row="2" Grid.Column="2" Text="6" FontSize="28" Clicked="OnNumberClicked"/>
        <Button Grid.Row="2" Grid.Column="3" Text="-" FontSize="28" Clicked="OnOperationClicked"/>

        <Button Grid.Row="3" Grid.Column="0" Text="1" FontSize="28" Clicked="OnNumberClicked"/>
        <Button Grid.Row="3" Grid.Column="1" Text="2" FontSize="28" Clicked="OnNumberClicked"/>
        <Button Grid.Row="3" Grid.Column="2" Text="3" FontSize="28" Clicked="OnNumberClicked"/>
        <Button Grid.Row="3" Grid.Column="3" Text="×" FontSize="28" Clicked="OnOperationClicked"/>

        <Button Grid.Row="4" Grid.Column="0" Text="C" FontSize="28" Clicked="OnClearClicked"/>
        <Button Grid.Row="4" Grid.Column="1" Text="0" FontSize="28" Clicked="OnNumberClicked"/>
        <Button Grid.Row="4" Grid.Column="2" Text="=" FontSize="28" Clicked="OnEqualsClicked"/>
        <Button Grid.Row="4" Grid.Column="3" Text="÷" FontSize="28" Clicked="OnOperationClicked"/>

    </Grid>

</ContentPage>
