<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiMovies.MainPage"
             BackgroundColor="#121212">

    <!-- macOS-first grid -->
    <Grid RowDefinitions="Auto,*"
          ColumnDefinitions="260,*"
          BackgroundColor="#0F0F0F">

        <!-- Header -->
        <Grid Grid.Row="0" Grid.ColumnSpan="3" Padding="20">
            <Label Text="🎬 MauiMovies"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"/>
        </Grid>
        <!-- SIDEBAR - LEFT COLUMN -->
                           <VerticalStackLayout
                                 Grid.Column="0"
                                 Padding="20"
                                 Spacing="16"
                                 BackgroundColor="#1A1A1A">

                          <Label Text="MauiMovies"
                                 FontSize="22"
                                 FontAttributes="Bold"
                                 TextColor="White"/>

                          <Label Text="Home" TextColor="#CCCCCC"/>
                          <Label Text="Movies" TextColor="White"/>
                         <Label Text="Profile" TextColor="#CCCCCC"/>

                         </VerticalStackLayout>

        <!-- Main content area -->
        <Border Grid.Row="1"
                Grid.Column="1"
                Stroke="#333"
                StrokeThickness="1"
                Padding="24"
                MaximumWidthRequest="1100"
                HorizontalOptions="Center">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16"/>
            </Border.StrokeShape>

            <ScrollView>

           <VerticalStackLayout Spacing="20"
            BindableLayout.ItemsSource="{Binding Movies}">
               
               <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="200,*"
                                  ColumnSpacing="32">

                                  <!-- Poster -->
                                <Border Stroke="#333"
                                        StrokeThickness="1"
                                        WidthRequest="220"
                                        HeightRequest="320">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>
                                    <Image Source="{Binding Poster}"
                                           Aspect="AspectFit"/>
                                </Border>

                          <!-- Movie info -->
                                <VerticalStackLayout Grid.Column="1"
                                                     VerticalOptions="Center"
                                                     Spacing="8">
                                    <Label Text="{Binding Title}"
                                           FontSize="22"
                                           FontAttributes="Bold"
                                           TextColor="White"/>
                                    <Label Text="{Binding Rating, StringFormat='⭐ {0:F1}'}"
                                           FontSize="16"
                                           TextColor="#03DAC6"/>
                                </VerticalStackLayout>
                            </Grid>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>
            </ScrollView>
        </Border>

        <!-- Footer -->
        <Grid Grid.Row="2" Grid.ColumnSpan="3" Padding="10">
            <Label Text="Footer David"
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Center"/>
        </Grid>

    </Grid>
</ContentPage>