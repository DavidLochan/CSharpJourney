<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiMovies.MainPage"
             BackgroundColor="#121212">

    <!-- macOS-first grid -->
    <Grid RowDefinitions="Auto,*,Auto"
          ColumnDefinitions="*,900,*">

        <!-- Header -->
        <Grid Grid.Row="0" Grid.ColumnSpan="3" Padding="20">
            <Label Text="🎬 MauiMovies"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"/>
        </Grid>

        <!-- Main content area -->
        <Border Grid.Row="1"
                Grid.Column="1"
                Stroke="#333"
                StrokeThickness="1"
                Padding="20">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16"/>
            </Border.StrokeShape>

           <VerticalStackLayout Spacing="12">

    <BoxView HeightRequest="240"
             BackgroundColor="#1E1E1E"
             CornerRadius="12"/>

    <Label Text="Movie Title"
           FontSize="18"
           FontAttributes="Bold"
           TextColor="White"/>

    <Label Text="⭐ 7.5"
           TextColor="#03DAC6"/>

</VerticalStackLayout>
        </Border>

        <!-- Footer -->
        <Grid Grid.Row="2" Grid.ColumnSpan="3" Padding="10">
            <Label Text="Footer David"
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Center"/>
        </Grid>

    </Grid>
</ContentPage>